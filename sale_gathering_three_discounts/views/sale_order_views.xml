<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="sale_gathering_three_discounts_form_view">
        <field name="name">sale.gathering.three.discounts.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='discount1']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.is_gathering', '=', True), ('parent.state', '=', 'sale'), ('initial_qty_gathered', '&gt;', 0)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='discount2']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.is_gathering', '=', True), ('parent.state', '=', 'sale'), ('initial_qty_gathered', '&gt;', 0)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='discount3']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.is_gathering', '=', True), ('parent.state', '=', 'sale'), ('initial_qty_gathered', '&gt;', 0)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
