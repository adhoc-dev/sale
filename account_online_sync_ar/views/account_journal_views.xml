<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_journal_dashboard_inherit_online_sync" model="ir.ui.view">
        <field name="name">account.journal.dashboard.inherit.online.sync</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account_online_synchronization.account_journal_dashboard_inherit_online_sync"/>
        <field name="arch" type="xml">

            <field name="account_online_account_id" position="after">
              <field name="paybook_last_transaction"/>
              <field name="account_online_provider_type"/>
            </field>

            <!-- Mostrar fecha ultima sincronizacion con paybook -->
            <span t-if="(record.next_link_synchronization !== undefined)" position="after">
                <br/>
                <span groups="account.group_account_user" class="text-muted" t-if="(record.next_link_synchronization !== undefined)" t-att-title="record.paybook_last_transaction.value">
                  Last: <t t-esc="record.paybook_last_transaction.value"/>
                  <br/>
                </span>
            </span>

            <!-- Esconder Proxima sincronizacion si soy paybook, esta valor no importa y confunde, solo tiene sentido con saltedge -->
            <span t-if="(record.next_link_synchronization !== undefined)" position="attributes">
              <attribute name="t-if">account_online_provider_type != 'paybook' and (record.account_online_account_id.value != '')</attribute>
            </span>

      </field>
    </record>

</odoo>
