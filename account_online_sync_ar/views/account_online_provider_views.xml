<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="online_provider_account_form_view" model="ir.ui.view">
        <field name="name">maccount.online.provider.form.view</field>
        <field name="model">account.online.provider</field>
        <field name="inherit_id" ref="account_online_sync.online_provider_account_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="after">
                <field name="action_required" attrs="{'invisible': [('provider_type', '!=', 'paybook')]}"/>
            </xpath>

            <button name="update_credentials" position="attributes">
                <attribute name="string">Update Password</attribute>
            </button>

            <field name="next_refresh" position="after">
                <field name="paybook_next_refresh"/>
            </field>
            <notebook position="before">
                <div attrs="{'invisible': [('provider_type', '!=', 'paybook')]}" groups="base.group_no_one">
                    <button name="action_paybook_update_state" string="Check Status" icon="fa-plus" type="object" class="oe_link"/>
                    <button name="action_paybook_update_accounts" string="Add/Configure accounts" icon="fa-plus" type="object" class="oe_link"/>
                    <button name="action_paybook_force_sync" string="Force Sync" icon="fa-refresh" type="object" class="oe_link"/>
                    <button name="online_account_delete_credentials" string="Delete Online Credentials" confirm="This action can not be undone. Are you sure? This can affect any other database using the same credential" icon="fa-trash" type="object" class="oe_link"/>
                </div>
            </notebook>
        </field>
    </record>

    <record id="online_provider_account_list_view" model="ir.ui.view">
        <field name="name">maccount.online.provider.tree.view</field>
        <field name="model">account.online.provider</field>
        <field name="inherit_id" ref="account_online_sync.online_provider_account_list_view"/>
        <field name="arch" type="xml">
            <field name="next_refresh" position="before">
                <field name="paybook_next_refresh"/>
            </field>
        </field>
    </record>

</odoo>
