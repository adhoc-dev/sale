<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.accountant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account_invoicing']//field[@name='group_multi_currency']/../.." position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('group_multi_currency', '=', False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string='NC/ND de ajuste por diferencia de cambio'/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Tolerancias utilizadas en la NC/ND de ajuste por diferencia de cambio
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Requerir si diferencia mayor a" for="exchange_diff_adjustment_tolerance" class="col-md-6 o_light_label"/>
                                <field name="exchange_diff_adjustment_tolerance" class="oe_inline"/>%
                            </div>
                            <div class="row">
                                <label string="Diferencia permitida en tasa de cambio" for="exchange_rate_tolerance" class="col-md-6 o_light_label"/>
                                <field name="exchange_rate_tolerance" class="oe_inline"/>%
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
