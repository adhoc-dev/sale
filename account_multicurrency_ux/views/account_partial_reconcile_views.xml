<odoo>

    <record id="view_account_partial_reconcile_form" model="ir.ui.view">
        <field name="name">account.partial.reconcile.form</field>
        <field name="model">account.partial.reconcile</field>
        <field name="inherit_id" ref="account_ux.view_account_partial_reconcile_form"/>
        <field name="arch" type="xml">
            <field name="full_reconcile_id" position="after">
                <field name="exchange_diff_invoice_id" attrs="{'invisible': [('exchange_diff_ignored', '!=', False)]}"/>
                <field name="exchange_diff_ignored" attrs="{'invisible': [('exchange_diff_invoice_id', '!=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="view_account_partial_reconcile_search" model="ir.ui.view">
        <field name="name">account.partial.reconcile.search</field>
        <field name="model">account.partial.reconcile</field>
        <field name="inherit_id" ref="account_ux.view_account_partial_reconcile_search"/>
        <field name="arch" type="xml">
            <group position="before">
                <filter name="exchange_diff_ignored" domain="[('exchange_diff_ignored','=',True)]" string="Ajuste por dif. de Cambio Ignorado"/>
                <filter name="exchange_diff_adjustment_required" domain="[('exchange_diff_adjustment_required','=',True)]" string="Requiere ajuste por diferencia de cambio"/>
                <separator/>
            </group>
        </field>
    </record>

</odoo>
