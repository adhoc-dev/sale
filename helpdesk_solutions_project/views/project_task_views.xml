<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <label for="helpdesk_solution_id"/>
                <div class="o_row">
                    <field name="helpdesk_solution_id" context="{'default_name':name,'default_solution_description': solution_description,'default_ticket_description':task_description}"/>
                    <button name="copy_solution" type="object" class="oe_link oe_read_only" attrs="{'invisible': [('helpdesk_solution_id', '=', False)]}" help="Overwrite the actual solution with the costumer solution of the linked solution" icon="fa-copy"/>
                </div>
            </field>
            <page name="description_page" position="after">
                <page string="Internal Description">
                    <field name="task_description" widget="html" groups="base.group_user" placeholder="Add task internal description..."/>
                </page>
                <page string="Solution">
                    <field name="solution_description" placeholder="Add solution description..."/>
                </page>
            </page>
        </field>
    </record>

</odoo>
