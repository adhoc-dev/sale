<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_subscription_line_filter" model="ir.ui.view">
        <field name="name">sale.order.line.search</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <search>
                <separator/>
                <filter name="open" string="Running" domain="[('order_id.stage_category','=','progress')]" help="Running Subscriptions"/>
                <filter name="pending" string="To Renew" domain="[('order_id.to_renew','=',True)]" help="Pending subscriptions"/>
                <filter name="closed" string="Closed" domain="[('order_id.stage_category','=','closed')]" help="Closed subscriptions"/>
                <separator/>
                <filter name="product_id" string="Product" domain="[]" context="{'group_by' : 'product_id'}" />
                <filter name="order_id" string="Subscription" domain="[]" context="{'group_by' : 'order_id'}" />
            </search>
        </field>
    </record>

    <!-- add new menu for sale lines -->
    <record model="ir.actions.act_window" id="action_sale_subscription_line_tree">
        <field name="name">Subscription Lines</field>
        <field name="domain">[('order_id.is_subscription', '=', True)]</field>
        <field name="context">{'search_default_open': 1}</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="res_model">sale.order.line</field>
    </record>

    <menuitem action="action_sale_subscription_line_tree"
        id="menu_sale_subscription_line" parent="sale_subscription.menu_sale_subscription"
        sequence="20" groups="sales_team.group_sale_manager"/>
</odoo>
