<?xml version="1.0"?>
<odoo>

    <record id="sale_subscription_order_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="arch" type="xml">
            <field name="is_subscription" position="after">
                <field name="dates_required" invisible="1"/>
            </field>
            <xpath expr="//div[hasclass('o_row')]/field[@name='end_date']" position="attributes">
                <attribute name="attrs">{'required': [('dates_required', '=', True)]}</attribute>
            </xpath>
            <field name="start_date" position="attributes">
                <attribute name="attrs">{'required': [('dates_required', '=', True)]}</attribute>
            </field>
        </field>
    </record>

</odoo>
