<?xml version="1.0"?>
<odoo>

    <record id="sale_subscription_order_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="arch" type="xml">
            <field name="is_subscription" position="after">
                <field name="dates_required" invisible="1"/>
            </field>
            <xpath expr="//div[hasclass('o_row')]/field[@name='end_date']" position="attributes">
                <attribute name="attrs">{'required': [('dates_required', '=', True)]}</attribute>
            </xpath>
            <field name="start_date" position="attributes">
                <attribute name="attrs">{'required': [('dates_required', '=', True)]}</attribute>
            </field>
        </field>
    </record>

   <record model="ir.ui.view" id="sale_subscription_view_tree">
        <field name="name">sale.subscription.view.tree.ux</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_tree"/>
        <field name="arch" type="xml">
            <field name="client_order_ref" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="amount_untaxed" position="before">
                <field name="recurring_monthly" string="MRR"/>
            </field>
            <tree>
                <header>
                    <button name="action_update_subscription_prices" type="object" help="Recompute only recurring products' prices based on this pricelist" string="Update Recurring Prices" confirm="This will update recurring products' unit prices based on the currently set pricelist."/>
                </header>
            </tree>
        </field>
    </record>

    <record id="sale_subscription_primary_form_view" model="ir.ui.view">
        <field name="name">sale.subscription.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_primary_form_view"/>
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="attributes">
                <attribute name="attrs">{'invisible':[('subscription_management', '=', 'upsell')]}</attribute>
            </field>
            <xpath expr="//label[@for='pricelist_id']/.." position="inside">
                <div class="o_cell o_wrap_label flex-grow-1 flex-sm-grow-0 w-100 text-break text-900">
                </div>
                <div class="o_cell o_wrap_input flex-grow-1 flex-sm-grow-0 text-break" style="width:100%">
                    <button name="action_update_subscription_prices" type="object" string="Update Recurring Prices" help="Recompute only recurring products' prices based on the subscription's pricelist" class="btn-link mb-1 px-0" icon="fa-refresh" confirm="This will update recurring products' prices based on the currently set pricelist." attrs="{'invisible': ['|', ('is_subscription', '=', False), ('state', 'not in', ['sale', 'done'])]}"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_order_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('subscription_management', '=', 'upsell'), ('state', 'in', ['sale', 'done']), ('is_subscription', '=', False)]}</attribute>
            </field>
        </field>
    </record>

</odoo>
