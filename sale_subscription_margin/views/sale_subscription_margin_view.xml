<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_margin_sale_order_tree">
        <field name="name">sale.order.margin.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_tree"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="margin"/>
                <field name="margin_percent"/>
            </tree>
            <tree position="attributes">
                <attribute name="decoration-success">margin_percent&gt;=0.6</attribute>
                <attribute name="decoration-warning">margin_percent&gt;=0.3 and margin_percent&lt;0.6</attribute>
                <attribute name="decoration-danger">(margin_percent&gt;0 and margin_percent&lt;0.3) or margin_percent&lt;0</attribute>
                <attribute name="decoration-muted">margin==0</attribute>
                <attribute name="decoration-info">to_renew</attribute>
            </tree>
        </field>
    </record>
</odoo>
