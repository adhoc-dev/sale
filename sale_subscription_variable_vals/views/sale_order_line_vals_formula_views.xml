<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_sale_order_line_vals_formula_tree" model="ir.ui.view">
        <field name="name">sale.order.line.vals_formula</field>
        <field name="model">sale.order.line.vals_formula</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_sale_order_line_vals_formula_form" model="ir.ui.view">
        <field name="name">sale.order.line.vals_formula</field>
        <field name="model">sale.order.line.vals_formula</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Test formula" invisible="not context.get('sale_line_id')" type="object" name="test_formula"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <field name="code" widget="ace" options="{'mode': 'python'}"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
