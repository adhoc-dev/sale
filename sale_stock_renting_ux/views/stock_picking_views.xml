<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rental_pickings" model="ir.ui.view">
        <field name="name">rental.pickings</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="immediate_transfer" position="after">
                <field name="is_rental_picking" invisible="1"/>
            </field>
            <xpath expr="//header//button[7]" position="attributes">
                <attribute  name="attrs">
                        {'invisible': ['|','|', ('state', '!=', 'done'), ('is_locked', '=', False),('is_rental_picking','=',True)]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
