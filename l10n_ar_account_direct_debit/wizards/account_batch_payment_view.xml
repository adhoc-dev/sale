<odoo>
    <data>

        <record id="account_batch_payment_view" model="ir.ui.view">
            <field name="name">account.batch_payment.form</field>
            <field name="model">account.batch_payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Débito automático Banco Galicia">
                    <group>
                        <field name="record_type"/>
                        <field name="first_expiration_date"/>
                        <field name="reference_payment"/>
                    </group>
                    <footer>
                        <button string="Confirmar" name="action_confirm_galicia_txt_content" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
