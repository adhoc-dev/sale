<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_batch_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.batch.payment.form.inherit</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_direct_debit.view_batch_payment_form_inherit"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="periodo" attrs="{'invisible': [('direct_debit_format', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='payment_ids']/tree//field[@name='amount_signed']" position="after">
                <field name="amount_company_currency_signed" sum="Total en pesos" string="Importe en pesos" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='payment_ids']/tree//field[@name='amount_signed']" position="attributes">
                <attribute name="sum"></attribute>
            </xpath>
        </field>
    </record>

</odoo>
