<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_batch_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.batch.payment.form.inherit</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_direct_debit.view_batch_payment_form_inherit"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="periodo" attrs="{'invisible': [('direct_debit_format', '=', False)]}"/>
            </field>
        </field>
    </record>


    <record model="ir.actions.server" id="action_download_files_wizard">
        <field name="name">Descargar txt</field>
        <field name="model_id" ref="model_account_batch_payment"/>
        <field name="state">code</field>
        <field name="code">
action = records.generate_debit_txt()
        </field>
        <field name="binding_model_id" ref="model_account_batch_payment"/>
    </record>

</odoo>
