<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.inherit.online.sync</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']/group" position="inside">
                <!-- TODO on v15 add attrs to view and make required when dd code is in inbound methods -->
                <group string="Merchant number" attrs="{'invisible': [('direct_debit_format','=', False)]}">
                    <field name="direct_debit_merchant_number"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
