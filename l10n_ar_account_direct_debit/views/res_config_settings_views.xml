<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.sepa.direct.debit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//div[@name='sepa_direct_debit_right_pane']/div[hasclass('content-group')]" position="after"> -->
            <xpath expr="//div[@data-key='account']//field[@name='module_account_payment']/../.." position="before">
                <div class="content-group">
                    <div class="row">
                        <label for="galicia_creditor_identifier" class="col-lg-3 o_light_label"/>
                        <field name="galicia_creditor_identifier" class="oe_inline"/>
                        <label for="direct_debit_merchant_number" class="col-lg-3 o_light_label"/>
                        <field name="direct_debit_merchant_number" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
