<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <group id="header_left_group">
                <field name="direct_debit_mandate_id" attrs="{'invisible': [('type', '!=', 'out_invoice')]}" options="{'no_create': True}" domain="[('partner_id.commercial_partner_id', '=', commercial_partner_id), ('company_id', '=', company_id), ('state', '=', 'active')]" groups="account.group_account_invoice"/>
            </group>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="direct_debit_mandate_id"/>
            </field>
            <group>
                <filter string="Direct Debit Mandate" name="groupby_direct_debit_mandate_id" domain="[]" context="{'group_by': 'direct_debit_mandate_id'}"/>
            </group>
        </field>
    </record>

</odoo>
