<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_batch_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.batch.payment.form.inherit</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="direct_debit_format" invisible="1"/>
            </form>
            <field name="name" position="after">
                <field name="direct_debit_collection_date" attrs="{'invisible': [('direct_debit_format', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='payment_ids']/tree" position="attributes">
                <attribute name="decoration-muted">state in ['draft', 'cancelled']</attribute>
            </xpath>
            <xpath expr="//button[@name='validate_batch_button']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', '=', 'draft'), ('payment_ids', '=', [])]}</attribute>
            </xpath>
            <!-- si el batch esta posteado (payment sent) permitimos cancelar rapidamente pagos que no se acreditan -->
            <xpath expr="//field[@name='payment_ids']/tree" position="inside">
                <button name="cancel_and_remove_from_batch" attrs="{'invisible': ['|', ('parent.state', 'not in', ['sent', 'reconciled']), ('state', '!=', 'posted')]}" string="Cancel" confirm="The payment will be cancelled and removed from this batch, are you sure you want to continue?" type="object"/>
            </xpath>
        </field>
    </record>

</odoo>
