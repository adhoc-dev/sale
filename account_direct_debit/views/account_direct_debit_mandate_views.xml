<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="account_direct_debit_mandate_form">
        <field name="name">account.direct_debit.mandate.form</field>
        <field name="model">account.direct_debit.mandate</field>
        <field name="arch" type="xml">
            <form>
                <field name="direct_debit_format" invisible="True"/>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                    <button string="Validate" type="object" name="action_validate_mandate" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button string="Close" type="object" name="action_close_mandate" class="oe_highlight" attrs="{'invisible':[('state','!=','active')]}"/>
                    <button string="Back To Draft" type="object" name="action_to_draft" attrs="{'invisible':[('state','!=','closed')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="direct_debit_mandate_form_button_box">
                        <button type="object" name="action_view_paid_invoices" icon="fa-pencil-square-o" class="oe_stat_button">
                            <span><field name="paid_invoices_nber" widget="statinfo" string="Invoices Paid" help="Invoices paid with this mandate."/></span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="journal_id" domain="[('type', '=', 'bank'), ('company_id', '=', company_id), ('inbound_payment_method_ids.code', '=', 'dd')]"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="company_id" groups="base.group_multi_company" required="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_direct_debit_mandate_tree">
        <field name="name">account.direct_debit.mandate.tree</field>
        <field name="model">account.direct_debit.mandate</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state == 'closed'">
                <field name="partner_id"/>
                <field name="description"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="account_direct_debit_mandate_search_view" model="ir.ui.view">
        <field name="name">account.direct_debit.mandate.search</field>
        <field name="model">account.direct_debit.mandate</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="description"/>
                <filter string="Draft" name="account_direct_debit_mandate_draft_filter" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="account_direct_debit_mandate_active_filter" domain="[('state', '=', 'active')]"/>
                <filter string="Closed" name="account_direct_debit_mandate_closed_filter" domain="[('state', '=', 'closed')]"/>
            </search>
        </field>
    </record>

    <record id="account_direct_debit_mandate_tree_act" model="ir.actions.act_window">
        <field name="name">Driect Debit Mandates</field>
        <field name="res_model">account.direct_debit.mandate</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_account_direct_debit_mandate_active_filter':1, 'search_default_account_direct_debit_mandate_draft_filter':1}</field>
    </record>

    <menuitem id="direct_debit_customer_mandates_menu"
        name="Debit Debit Mandates"
        parent="account.menu_finance_receivables"
        action="account_direct_debit_mandate_tree_act"
        sequence="50"/>
</odoo>
