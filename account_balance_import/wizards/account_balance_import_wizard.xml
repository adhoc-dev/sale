<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="account_balance_import_wizard">
        <field name="name">account_balance_import_wizard</field>
        <field name="model">account_balance_import</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id"/>
                    <field name="mode"/>
                    <field name="accounting_date"/>
                    <field name="counterpart_account_id" groups="base.group_no_one"/>
                </group>
                <group>
                    <group>
                        <div class="alert alert-info" role="alert">
                            <h1>
                                <span class="fa fa-info" aria-label="info"></span>
                            </h1>
                            <p>
                                Descargue la plantilla de importación siguiendo el link
                                y edítelo manteniendo la estructura del archivo.<br/>
                                Una vez finalizada la edición, suba el archivo modificado
                                y haga click en el botón "Importar" ubicado más abajo.
                            </p>
                        </div>
                    </group>
                    <!-- Check Balance Selected -->
                    <group attrs="{'invisible': [('mode', 'not in', 'check_balance')] }">
                        <h3 colspan="4">Importación de Cheques</h3>
                        <field name="check_type" attrs="{'required': [('mode', '=', 'check_balance')] }" />
                        <field name="check_journal_bank_id" attrs="{'required': [('mode', '=', 'check_balance'), ('check_type', '=', 'issue_check')], 'invisible': [('check_type', 'not in', 'issue_check')] }" domain="[('type', 'in', ['cash', 'bank'])]" />
                        <field name="check_checkbook_id" attrs="{'required': [('mode', '=', 'check_balance'), ('check_type', '=', 'issue_check')], 'invisible': [('check_type', 'not in', 'issue_check')]}" domain="[('journal_id', '=', check_journal_bank_id)]"/>
                        <field name="check_journal_third_id" attrs="{'required': [('mode', '=', 'check_balance'), ('check_type', '=', 'third_check')],
                        'invisible': [('check_type', 'not in', 'third_check')] }" />
                        <br/>
                        <a class="btn btn-link" colspan="4" attrs="{'required': [('mode', '=', 'partner_balance')] }" href="/account_balance_import/static/xls/check_balance.xls" role="button">
                            <span class="fa fa-download" title="download"></span>
                            Descargar Plantilla de Importación de Cheques
                        </a>
                        <br/>
                        <field name="check_file" attrs="{'required': [('mode', '=', 'check')] }"/>
                    </group>
                    <!-- Account Balance Selected -->
                    <group attrs="{'invisible': [('mode', 'not in', 'account_balance')] }">
                        <h3 colspan="4">Importación de Saldos Contables</h3>
                        <field name="account_opening_entries_journal_id" attrs="{'required': [('mode', '=', 'account_balance')] }" />
                        <br/>
                        <button name="action_generate_xls" colspan="4" type="object" class=" oe_link oe_inline" string="⇒ Descargar Plantilla de Importación de Saldos Contables"/>
                        <br/>
                        <field name="account_balance_file"/>
                    </group>
                    <!-- Partner Balance Selected -->
                    <group attrs="{'invisible': [('mode', 'not in', 'partner_balance')] }">
                        <h3 colspan="4">Importación de Saldos de Partners</h3>
                        <field name="partner_balance_journal_id" attrs="{'required': [('mode', '=', 'partner_balance')] }" />
                        <field name="partner_balance_type" attrs="{'required': [('mode', '=', 'partner_balance')] }" />
                        <br/>
                        <a class="btn btn-link" colspan="4" attrs="{'required': [('mode', '=', 'partner_balance')] }" href="/account_balance_import/static/xls/partner_balance.xls" role="button">
                            <span class="fa fa-download" title="download"></span>
                            Descargar Plantilla de Importación de Saldos de Partners
                        </a>
                        <br/>
                        <field name="partner_balance_file" attrs="{'required': [('mode', '=', 'partner_balance')] }"/>
                    </group>
                </group>
                <footer>
                    <button type="object" name="check_balance_import_xls" class="btn btn-primary" attrs="{'invisible': [('mode', 'not in', 'check_balance')]}">Importar Cheques</button>
                    <button type="object" name="account_balance_import_xls" class="btn btn-primary" attrs="{'invisible': [('mode', 'not in', 'account_balance')] }">Importar Saldos Contables</button>
                    <button type="object" name="partner_balance_import_xls" class="btn btn-primary" attrs="{'invisible': [('mode', 'not in', 'partner_balance')] }">Importar Saldos de Partners</button>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="account_balance_import_action" model="ir.actions.act_window">
        <field name="name">Account Balance Import Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account_balance_import</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="account_balance_import_wizard"/>
        <field name="target">new</field>
    </record>

</odoo>
